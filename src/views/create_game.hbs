<html lang="en">
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <style>
        .game_creator_container{
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            height: 30vh;
            width: 40vw;
            background-color: rgba(250, 250, 250, 1);
            border: solid 0.5vh gray;
        }
        .name_container{
            height: 33%;
            width: 100%;
            align-items: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .label_name{

        }
        .input_name{

        }
        .create_game_container{
            height: 33%;
            width: 100%;
            align-items: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .join_game_container{
            height: 33%;
            width: 100%;
            align-items: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .label_join_game{

        }
        .id_game{

        }
    </style>
    <title>Book Face</title>
</head>
<body>
    <div class="game_creator_container">
        <form action="/create_game" method="post">
            <div class="name_container">
                <div class="label_name">
                    Merci de saisir un pseudo
                </div>
                <input class="input_name" name="pseudo" />
                {{#if post.error}}
                <span class="error"> {{post.error}} </span>
                {{/if}}
            </div>
            <div class="create_game_container">
                <button type="submit">Cr√©er une partie</button>
            </div>
            <div class="join_game_container">
                <div class="label_join_game">
                    Saisir l'ID de la partie en cours
                </div>
                <input class="id_game" name="gameId" />
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>
